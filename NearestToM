void Nearest(int* arr, int n, int M, int& nearest, int& ndx)
{
	int range = INT_MAX;
	for (int i = 0; i < n; i++)
	{
		if (abs(M - arr[i]) < range)
		{
			range = abs(M - arr[i]);
			nearest = arr[i];
			ndx = i;
		}
	}
}

int main()
{
	int nearest, ndx, n, M;

	scanf_s("%d", &n);

	int* arr = new int[n];
	
	for (int i = 0; i < n; i++)
	{
		scanf_s("%d", &arr[i]);
	}

	scanf_s("%d", &M);

	Nearest(arr, n, M, nearest, ndx);
	printf("%d\n%d", nearest, ndx);
}
