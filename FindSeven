#include <iostream>

//Кузнецов Андрей, 15 группа
//Проверяет, есть ли в записи числа цифра 7
int main()
{
    int num;
    int flag = 0;
    printf("Enter a number \n");
    scanf_s("%d", &num);
    int number = num;
    while (number > 0)
    {
        if (number % 10 == 7)
        {
            flag = 1;
            break;
        }
        number /= 10;
    }
    if (flag == 1)
        printf("There is 7 in number");
    else
        printf("There is no 7 in number");
}
