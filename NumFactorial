#include <iostream>

//Кузнецов Андрей, 15 группа
//Поиск (n)!!
int main()
{
    int num;
    int i = 1;
    printf("Enter a number \n");
    scanf_s("%d", &num);
    int number = num;
    int result = 1;

    if (number % 2 == 0)
        i = 2;

    while (i <= number)
    {
        result = result * i;
        i = i + 2;
    }

        printf("%d!! equals: %d", num, result);
}
