#include <iostream>
#include <stdio.h>
const int len = 5;
#pragma warning(disable : 4996)

//Независимо начала сдвигает элементы массива вправо на 1, затем влево на заданный диапазон
int main()	
{
	int a[len];	//Входные данные
	int range;	//Определяет диапазон сдвига элементов
	int lastNumber;
	int firstNumber;

	printf("Array leghth is: %d", len);
	printf("\nEnter array values: \n");
	for (int i = 0; i < len; i++) 
	{
		scanf_s("%d", &a[i]);
	}

	//Передаём элементы массива в рабочий массив, чтобы не затронуть входные данные
	int firstWorkingArray[len];
	for (int i = 0; i < len; i++)
	{
		firstWorkingArray[i] = a[i];
	}

	int secondWorkingArray[len];
	for (int i = 0; i < len; i++)
	{
		secondWorkingArray[i] = a[i];
	}

	/* 
	*   Записываем последний элемент массива в lastNumber
	*   Сдвигаем вправо все элементы массива, кроме первого, т.к в цикле работаем с индексом i-1
	*   Вручную передаём lastNumber в последний элемент массива
	*/
	lastNumber = firstWorkingArray[len - 1];
	for (int i = len-1; i >=1; i--)
	{
		firstWorkingArray[i] = firstWorkingArray[i - 1];
	}
	firstWorkingArray[0] = lastNumber;

	//Вывод результата
	printf("Array moved to right by 1 is: ");
	for (int i = 0; i < len; i++)
	{
		printf("%d ", firstWorkingArray[i]);
	}

	//Ввод диапазона для сдвига массива влево
	printf("\n\nEnter a range: ");
	scanf_s("%d", &range);


	//Сдвиг влево на 1, выполненные range раз
	while (range > 0)
	{
		firstNumber = secondWorkingArray[0];
		for (int i = 0; i < len-1; i++)
		{
			secondWorkingArray[i] = secondWorkingArray[i + 1];
		}
		secondWorkingArray[len - 1] = firstNumber;
		range--;
	}

	//Вывод результата
	printf("Array moved to left by range is: ");
	for (int i = 0; i < len; i++)
	{
		printf("%d ", secondWorkingArray[i]);
	}
	return 0;
}
