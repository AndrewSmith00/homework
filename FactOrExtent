#include <iostream>
#include <stdio.h>
const int len = 5;
#pragma warning(disable : 4996)

int main()	
{
	int num, n, M = 1, i = 1, k;
	printf("Enter a number\n");
	scanf("%d", &n);
	num = n;
	if (num < 10)
	{
		while (i <= num)
		{
			M = M * i;
			i++;
		}
		printf("(number)! equals %d\n", M);
	}
	else
	{
		printf("Enter an extent\n");
		scanf("%d", &k);
		while (i<=k)
		{
			M = M * n;
			i++;
		}
		
		printf("n^k equals %d\n", M);
	}
	
}
