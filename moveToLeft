#include <iostream>
#include <stdio.h>
const int len = 8;
#pragma warning(disable : 4996)

int main()
{
    int range;      //Переменная, определяющая расстояние сдвига значений в массиве

    printf("Array length is %d ", len);
    printf("\nChoose the range: ");
    scanf("%d", &range);

    if (range >= 5)                         
        printf("Error: range is bigger or equal to array lenght");

    int myArray[len];       //Входные данные
    int result[len];        //Массив, в который записывается результат

    printf("\nEnter array values \n");
    for (int i = 0; i < len; i++)
    {
        scanf("%d", &myArray[i]);
    }



    for (int j = 0; j < len; j++)       //Запись чисел из myArray в result с учётом сдвига
    {
        if (j + range > len - 1)
        {
            result[j] = myArray[range - (len  - j)];
            continue;
        }
        result[j] = myArray[j + range];
    }

    for (int i = 0; i < len; i++)       //Вывод result
    {
        printf("%d", result[i]);
    }

    return 0;
}
