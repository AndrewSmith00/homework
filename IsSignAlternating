#include <iostream>
#include <stdio.h>


int main()		
{
	int currentValue;
	int nextValue;
	bool isPositive = true;
	bool nextIsPositive;
	int count = 0;
	int amount;
	bool flag = true;

	printf("Enter an amount of numbers\n");
	scanf_s("%d", &amount);
	
	printf("Enter first number\n");
	scanf_s("%d", &currentValue);

	
	
	if (currentValue < 0)
	{
		isPositive = false;
	}

	while (count < amount-1)
	{
		printf("Enter a number\n");
		scanf_s("%d", &nextValue);

		bool nextIsPositive = true;

		if (nextValue < 0)
		{
			nextIsPositive = 0;
		}

		if (nextIsPositive == isPositive)
		{
			flag = false;
			break;
		}

		isPositive = nextIsPositive;
		count++;
	}

	if (flag)
		printf("Subsequence is sign alternating");
	else
		printf("Subsequence is not sign alternating");
	
}
