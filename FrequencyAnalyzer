#include <iostream>
#include <stdio.h>


int main()
{
	int num;
	int arrayOfDigits[10] = {};

	printf("Enter a number\n");
	scanf_s("%d", &num);

	while (num > 0)
	{
		arrayOfDigits[num % 10] = arrayOfDigits[num % 10] + 1;;
		num = num / 10;
	}

	for (int i = 0; i < 10; i++)
	{
		if (arrayOfDigits[i] != 0)
		{
			printf("Amount of digit %d is % d \n", i, arrayOfDigits[i]);
		}
	}
}
